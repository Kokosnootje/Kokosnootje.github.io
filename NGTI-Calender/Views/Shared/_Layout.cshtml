<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NGTI Calender</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://apis.google.com/js/platform.js?onload=init" async defer></script>
    <script type="text/javascript">
        
    </script>
</head>
<body>
    <!--NAVIGATION BAR-->
    <div class="nav_bar">
        <header>
            <img src="https://i.imgur.com/9ZfDkqa.png" />
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Overview", new { personId = ViewData["PersonId"] } )" id="@ViewData["ID Overview"]">Overview</a></li>
                    <li>-</li>
                    <li><a href="@Url.Action("Index", "Teams", new { personId = ViewData["PersonId"] } )" id="@ViewData["ID Team"]">Team</a></li>
                    <li>-</li>
                    <li><a href="@Url.Action("Index", "Reservation", new { personId = ViewData["PersonId"] } )" id="@ViewData["ID Reserve"]">Reserve</a></li>
                    <li>-</li>
                    <li><a href="@Url.Action("Index", "Admin", new { personId = ViewData["PersonId"] })" id="@ViewData["ID Admin Dashboard"]">Admin</a></li>
                </ul>
            </nav>
            <img id="google_pf" src="@ViewData["ProfilePicture"]" />
        </header>
    </div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - NGTI_Calender - <a href="https://www.ngti.nl">Official NGTI website</a>
        </div>
    </footer>
</body>
</html>